<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="_253504_Noskovich.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:_253504_Noskovich.UI"
    xmlns:pages="clr-namespace:_253504_Noskovich.UI.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="_253504_Noskovich.UI"
    Shell.BackgroundColor="#FFC0CB"
    Shell.ForegroundColor="Black">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
    Title="Brands List"
    ContentTemplate="{DataTemplate pages:BrandsList}"
    Route="Brands" />

</Shell>

